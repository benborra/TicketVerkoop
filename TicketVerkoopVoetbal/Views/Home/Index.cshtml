@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
       
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/@Url.Content("images/reclameDuivels.jpg")" alt="reclame4">
        </div>

        <div class="item">
            <img src="~/@Url.Content("images/reclameEK.jpg")" alt="reclame3">
        </div>

        <div class="item">
            <img src="~/@Url.Content("images/reclameUnibet.jpg")" alt="reclame2">
        </div>

    </div>
    
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="row">
    <div class="col-md-4 homeInfo">
        <img src="~/images/icons/ticket.png" alt="iconSub" class="homeIcons"/>
        <h2>Abonnementen</h2>
        <p>
            Steun uw favoriet team en koop een abonnement!
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Index","Abonnement")">Abonnement kiezen  &raquo;</a></p>
    </div>
    @*is user logged in?*@
    @if (ViewBag.ClubNaam == null)
    {
        @* geef standaard log in link*@
        <div class="col-md-4 homeInfo">
            <img src="~/images/icons/ball.png" alt="iconSub" class="homeIcons" />
            <h2>Inloggen</h2>
            <p>
                Je bent niet ingelogd. Je dient je in te loggen om wedstrijden te bekijken.
            </p>
            <p><a class="btn btn-default" href="@Url.Action("Login", "Account")">Inloggen &raquo;</a></p>
        </div>
    }
    else
    {
        if (ViewBag.ClubNaam == "newuser")
        {
            <div class="col-md-4 homeInfo">
                <img src="~/images/icons/ball.png" alt="iconSub" class="homeIcons" />
                <h2>Wedstrijden</h2>
                <p>
                    Klik hier om de aankomende wedstrijden te zien.
                </p>
                <p><a class="btn btn-default" href="@Url.Action("Index", "Wedstrijd")">Wedstrijden &raquo;</a></p>
            </div>
        }
        else
        {
            @* als de if hier komt dan zitten er items in club en image*@
            <div class="col-md-4 homeInfo">
                <img src="~/@Url.Content(ViewBag.Image)" alt="iconSub" class="homeIcons" />
                <h2>Kijkt snel of @Html.Raw((string)ViewBag.ClubNaam) speelt</h2>
                <p>
                    Klik hier om de aankomende wedstrijden te zien.
                </p>
                <p><a class="btn btn-default" href="@Url.Action("Index", "Wedstrijd")">Wedstrijden &raquo;</a></p>
            </div>
        }
    }
    <div class="col-md-4 homeInfo">
        <img src="~/images/icons/schild.png" alt="iconSub" class="homeIcons" />
        <h2>Ploegen</h2>
        <p>
           Speelt jouw team ook mee in de Vives-liga?
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Index","Club")">Bekijk Clubs &raquo;</a></p>
    </div>
</div>