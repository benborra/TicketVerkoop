@model Ticket.Model.Abonnement

@{
    ViewBag.Title = "Abonnementen";
}

<h2>Abonnementen</h2>

@if (TempData["cantDelete"] != null)
            {
                TempData["cantDelete"] = null;
    <div class="alert alert-danger">
        <strong>Opgelet!</strong> U heeft al een abonnement voor het geselecteerde seizoen!<br />

    </div>
}
@if (TempData["datumerror"] != null)
            {
                TempData["datumerror"] = null;
    <div class="alert alert-danger">
        <strong>Opgelet!</strong> U probeert een abonnement te kopen in de verkeerde periode!<br />

    </div>
}
@using (Html.BeginForm("Create","Abonnement")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Een abonnement kopen</h4>
       <p>
           Opgelet! Er kunnen geen abonnementen meer worden gekocht van een seizoen dat al begonnen is. U kan voor aankomende jaren wel al een abonnement kopen.
           <br/> Er kan ook per account maar één abonnement gekocht worden per jaar.
       </p>
        <hr />
        <div class="form-group">
            @Html.Label("Kies een seizoen", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Seizoen",null,  htmlAttributes : new { @class = "form-control" } )
             
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Kies een ploeg", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Ploegen",null, htmlAttributes : new { @class = "form-control" } )
            
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Kies waar u wilt zitten", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Plaatsen", null, htmlAttributes : new { @class = "form-control"})
            
            </div>
        </div>
      

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
